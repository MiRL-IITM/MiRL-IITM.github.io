---
import { getCollection, render } from "astro:content";
import { Image } from "astro:assets";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const people = await getCollection("people", ({ data }) => !data.draft);
  return people.map((person) => ({
    params: { slug: person.id },
    props: { person },
  }));
}

const { person } = Astro.props;
const { data } = person;
const { Content } = await render(person);

const roleLabels: Record<string, string> = {
  faculty: "Faculty",
  postdoc: "Postdoctoral Researcher",
  phd: "Ph.D. Student",
  masters: "Master's Student",
  undergraduate: "Undergraduate Researcher",
  visiting: "Visiting Researcher",
  staff: "Staff",
  alumni: "Alumni",
};
---

<BaseLayout
  title={data.name}
  description={`${data.name} - ${data.title} at MIRL`}
>
  <div class="container py-12">
    <nav class="mb-8">
      <a
        href="/people"
        class="text-accent-600 hover:text-accent-700 text-sm flex items-center gap-1"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to People
      </a>
    </nav>

    <div class="max-w-4xl">
      <div class="flex flex-col md:flex-row gap-8 mb-8">
        <div class="shrink-0">
          <div class="w-48 h-48 rounded-xl overflow-hidden bg-gray-100">
            <Image
              src={data.photo}
              alt={data.name}
              width={192}
              height={192}
              class="w-full h-full object-cover"
            />
          </div>
        </div>

        <div class="flex-1">
          <span class="badge badge-active mb-2">{roleLabels[data.role]}</span>
          <h1 class="text-3xl font-bold text-primary-900 mb-2">{data.name}</h1>
          <p class="text-xl text-gray-600 mb-4">{data.title}</p>

          {
            data.researchInterests && data.researchInterests.length > 0 && (
              <div class="mb-4">
                <h3 class="text-sm font-medium text-gray-500 mb-2">
                  Research Interests
                </h3>
                <div class="flex flex-wrap gap-2">
                  {data.researchInterests.map((interest) => (
                    <span class="text-sm bg-primary-50 text-primary-700 px-3 py-1 rounded-full">
                      {interest}
                    </span>
                  ))}
                </div>
              </div>
            )
          }

          {
            data.role === "alumni" && (
              <div class="bg-gray-50 rounded-lg p-4 mb-4">
                {data.currentPosition && (
                  <p class="text-gray-700">
                    <span class="font-medium">Current Position:</span>{" "}
                    {data.currentPosition}
                  </p>
                )}
                {data.graduationYear && (
                  <p class="text-gray-700">
                    <span class="font-medium">Graduated:</span>{" "}
                    {data.graduationYear}
                  </p>
                )}
                {data.thesisTitle && (
                  <p class="text-gray-700">
                    <span class="font-medium">Thesis:</span> {data.thesisTitle}
                  </p>
                )}
              </div>
            )
          }

          <div class="flex flex-wrap gap-3">
            {
              data.email && (
                <a
                  href={`mailto:${data.email}`}
                  class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-accent-600"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    />
                  </svg>
                  Email
                </a>
              )
            }
            {
              data.website && (
                <a
                  href={data.website}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-accent-600"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                    />
                  </svg>
                  Website
                </a>
              )
            }
            {
              data.googleScholar && (
                <a
                  href={data.googleScholar}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-accent-600"
                >
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z" />
                  </svg>
                  Google Scholar
                </a>
              )
            }
            {
              data.github && (
                <a
                  href={`https://github.com/${data.github}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-accent-600"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
                  </svg>
                  GitHub
                </a>
              )
            }
          </div>
        </div>
      </div>

      <article class="prose prose-lg max-w-none text-justify *:mb-6 prose-ul:list-disc prose-ul:pl-6 prose-li:my-1">
        <Content />
      </article>
    </div>
  </div>
</BaseLayout>
