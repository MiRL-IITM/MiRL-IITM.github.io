---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/home/Hero.astro";
import LatestNews from "../components/home/LatestNews.astro";
---

<BaseLayout
  title="Home"
  description="Medical Imaging and Reconstruction Lab - Advancing medical imaging through innovative research in image reconstruction, deep learning, and computational methods."
>
  <Hero />

  <!-- By the Numbers Section -->
  <section class="bg-white py-12 border-b border-gray-200">
    <div class="container mx-auto px-4">
      <div
        class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center divide-x-0 md:divide-x divide-gray-200"
      >
        <!-- Metric 1 -->
        <div class="p-4 transition hover:-translate-y-1 duration-300">
          <div class="text-4xl md:text-5xl font-bold text-primary-900 mb-2">
            5+
          </div>
          <p class="text-gray-600 text-sm md:text-base font-medium">
            Active Clinical Collaborations
          </p>
        </div>

        <!-- Metric 2 -->
        <div class="p-4 transition hover:-translate-y-1 duration-300">
          <div class="text-4xl md:text-5xl font-bold text-accent-600 mb-2">
            85+
          </div>
          <p class="text-gray-600 text-sm md:text-base font-medium">
            Peer-Reviewed Publications
          </p>
        </div>

        <!-- Metric 3 -->
        <div class="p-4 transition hover:-translate-y-1 duration-300">
          <div class="text-4xl md:text-5xl font-bold text-primary-900 mb-2">
            1
          </div>
          <p class="text-gray-600 text-sm md:text-base font-medium">
            In-House Micro-CT Facility
          </p>
        </div>

        <!-- Metric 4 -->
        <div class="p-4 transition hover:-translate-y-1 duration-300">
          <div class="text-4xl md:text-5xl font-bold text-accent-600 mb-2">
            --
          </div>
          <p class="text-gray-600 text-sm md:text-base font-medium">
            Open-Source Foundational Models
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Research Pillars Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-primary-900 mb-4">
          Our Unique Strengths
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto text-lg">
          Pioneering the intersection of physics, AI, and clinical medicine.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Pillar 1: Physics-Grounded AI -->
        <div
          class="group relative bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden hover:-translate-y-2"
        >
          <div
            class="absolute top-0 right-0 w-32 h-32 bg-primary-50 rounded-bl-full -mr-8 -mt-8 transition-transform group-hover:scale-110"
          >
          </div>

          <div class="relative z-10">
            <div
              class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mb-6 text-primary-600 group-hover:bg-primary-600 group-hover:text-white transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                ></path>
              </svg>
            </div>

            <h3
              class="text-2xl font-bold text-primary-900 mb-3 group-hover:text-primary-700"
            >
              Physics-Grounded AI
            </h3>
            <p class="text-gray-600 leading-relaxed mb-6">
              Integrating fundamental physical laws into deep learning
              architectures. By leveraging <span
                class="font-semibold text-primary-700"
                >Physics-Informed Neural Networks (PINNs)</span
              >, we achieve superior image reconstruction accuracy with less
              data, ensuring model outputs adhere to medical reality.
            </p>

            <a
              href="/research"
              class="inline-flex items-center text-accent-600 font-semibold group-hover:text-accent-700"
            >
              Explore Research
              <svg
                class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
              >
            </a>
          </div>
        </div>

        <!-- Pillar 2: Clinical Co-Pilot -->
        <div
          class="group relative bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden hover:-translate-y-2"
        >
          <div
            class="absolute top-0 right-0 w-32 h-32 bg-accent-50 rounded-bl-full -mr-8 -mt-8 transition-transform group-hover:scale-110"
          >
          </div>

          <div class="relative z-10">
            <div
              class="w-14 h-14 bg-accent-100 rounded-xl flex items-center justify-center mb-6 text-accent-600 group-hover:bg-accent-600 group-hover:text-white transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>

            <h3
              class="text-2xl font-bold text-primary-900 mb-3 group-hover:text-primary-700"
            >
              Clinical Co-Pilot
            </h3>
            <p class="text-gray-600 leading-relaxed mb-6">
              Bridging the gap between algorithms and doctors. We develop <span
                class="font-semibold text-primary-700">Agentic Workflows</span
              > and <span class="font-semibold text-primary-700"
                >Explainable AI (XAI)</span
              > systems that act as transparent, reliable partners in diagnostic decision-making.
            </p>

            <a
              href="/research"
              class="inline-flex items-center text-accent-600 font-semibold group-hover:text-accent-700"
            >
              See How It Works
              <svg
                class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
              >
            </a>
          </div>
        </div>

        <!-- Pillar 3: Multimodal Synthesis -->
        <div
          class="group relative bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden hover:-translate-y-2"
        >
          <div
            class="absolute top-0 right-0 w-32 h-32 bg-indigo-50 rounded-bl-full -mr-8 -mt-8 transition-transform group-hover:scale-110"
          >
          </div>

          <div class="relative z-10">
            <div
              class="w-14 h-14 bg-indigo-100 rounded-xl flex items-center justify-center mb-6 text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                ></path>
              </svg>
            </div>

            <h3
              class="text-2xl font-bold text-primary-900 mb-3 group-hover:text-primary-700"
            >
              Multimodal Synthesis
            </h3>
            <p class="text-gray-600 leading-relaxed mb-6">
              Processing the full patient story. Our <span
                class="font-semibold text-primary-700">Foundational Models</span
              > synthesize data from various imaging modalities and clinical records
              to uncover hidden patterns and improve diagnostic precision.
            </p>

            <a
              href="/research"
              class="inline-flex items-center text-accent-600 font-semibold group-hover:text-accent-700"
            >
              View Models
              <svg
                class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
              >
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <LatestNews />

  <!-- Join Us Section -->
  <section class="py-16">
    <div class="container">
      <div class="bg-primary-900 rounded-2xl p-8 md:p-12 lg:p-16 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Join Our Team
        </h2>
        <p class="text-primary-200 text-lg max-w-2xl mx-auto mb-8">
          We are always looking for talented and motivated students and
          researchers to join our lab. If you're passionate about medical
          imaging and machine learning, we'd love to hear from you.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/people"
            class="btn-primary bg-accent-500 hover:bg-accent-600"
          >
            Meet Our Team
          </a>
          <a
            href="/contact"
            class="btn-secondary bg-white/10 border-white/30 text-white hover:bg-white/20"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
