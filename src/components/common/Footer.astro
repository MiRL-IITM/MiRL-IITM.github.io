---
import { Image } from "astro:assets";
import logoFull from "../../assets/images/common/logo-full.png";

const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: "/research", label: "Research" },
  { href: "/publications", label: "Publications" },
  { href: "/people", label: "People" },
  { href: "/blog", label: "Blog" },
  { href: "/courses", label: "Courses" },
];

const resourceLinks = [
  { href: "/about", label: "About" },
  { href: "/contact", label: "Contact" },
];
---

<footer class="bg-primary-900 text-white">
  <div class="container py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Lab Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center gap-3 mb-4">
          <div
            class="w-100 h-25 bg-primary-900 rounded-lg flex items-center justify-center"
          >
            <Image
              src={logoFull}
              alt="Logo"
              class="w-full h-full object-contain"
            />
          </div>
        </div>
        <p class="text-primary-200 text-sm leading-relaxed max-w-md mb-6">
          Advancing medical imaging through innovative research.
        </p>
        <div class="text-primary-200 text-sm">
          <p>Department of Data Science and Artificial Intelligence</p>
          <p>Indian Institute of Technology Madras</p>
          <p>603, New Academic Complex-2,</p>
          <p>Chennai, Tamil Nadu, India - 600036.</p>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-primary-200 hover:text-white text-sm transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h4 class="font-semibold mb-4">Resources</h4>
        <ul class="space-y-2">
          {
            resourceLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-primary-200 hover:text-white text-sm transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
        <div class="mt-6">
          <h4 class="font-semibold mb-3">Connect</h4>
