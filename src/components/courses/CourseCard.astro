---
import type { CollectionEntry } from "astro:content";

interface Props {
  course: CollectionEntry<"courses">;
}

const { course } = Astro.props;
const { data, id } = course;

const semesterLabels = {
  fall: "Fall",
  spring: "Spring",
  summer: "Summer",
};

const levelLabels = {
  undergraduate: "Undergraduate",
  graduate: "Graduate",
  mixed: "Mixed",
};
---

<a href={`/courses/${id}`} class="block group">
  <article
    class="h-full bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100"
  >
    <div class="p-6">
      <div class="flex items-start justify-between gap-4 mb-4">
        <div class="shrink-0">
          <span
            class="inline-block px-3 py-1 bg-linear-to-r from-primary-600 to-accent-600 text-white font-mono text-sm font-semibold rounded-lg shadow-sm"
          >
            {data.courseNumber}
          </span>
        </div>
        <div class="flex flex-wrap gap-2 justify-end">
          <span
            class="inline-block px-2 py-1 bg-primary-100 text-primary-700 text-xs font-medium rounded-md"
          >
            {levelLabels[data.level]}
          </span>
          {
            data.currentlyOffered && (
              <span class="inline-block px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-md animate-pulse">
                âœ“ Currently Offered
              </span>
            )
          }
        </div>
      </div>

      <h3
        class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors mb-3 line-clamp-2"
      >
        {data.title}
      </h3>

      <p class="text-gray-600 text-sm line-clamp-3 mb-4 leading-relaxed">
        {data.description}
      </p>

      <div
        class="flex items-center gap-4 text-sm text-gray-500 pt-4 border-t border-gray-100"
      >
        <div class="flex items-center gap-1">
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          <span class="font-medium">
            {semesterLabels[data.semester]}
            {data.year}
          </span>
        </div>
        {
          data.credits && (
            <div class="flex items-center gap-1">
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                />
              </svg>
              <span>{data.credits} credits</span>
            </div>
          )
        }
      </div>
    </div>

    <div
      class="px-6 py-3 bg-gray-50 group-hover:bg-primary-50 transition-colors"
    >
      <span
        class="text-sm font-medium text-primary-600 group-hover:text-primary-700 flex items-center gap-1"
      >
        View Course Details
        <svg
          class="w-4 h-4 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </span>
    </div>
  </article>
</a>
